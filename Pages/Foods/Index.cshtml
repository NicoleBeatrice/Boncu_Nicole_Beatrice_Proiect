@page "/{id:int?}"

@model Boncu_Nicole_Beatrice_Proiect.Pages.Foods.IndexModel

@{
    ViewData["Title"] = "Foods";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Food[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Food[0].Allergens)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Food[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Food[0].ExtraToppings)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Food[0].Drink.DrinkName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Food[0].FoodOffers)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.FoodD.Foods) 
        {
            string selectedRow = "";
            if (item.ID == Model.FoodID)
            {
                selectedRow = "table-success";
            }
      <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Allergens)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                 @Html.DisplayFor(modelItem => item.ExtraToppings)
            </td>
            <td>
                  @Html.DisplayFor(modelItem => item.Drink.DrinkName)
            </td>
                <td>
                        @{
                            foreach (var offer in item.FoodOffers)
                            {
                                @offer.Offer.ID @: @offer.Offer.Oferta <br />
                            }
                        }
                </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>